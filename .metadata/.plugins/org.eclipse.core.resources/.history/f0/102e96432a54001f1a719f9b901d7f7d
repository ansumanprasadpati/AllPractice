
public class MissingNum {
	    public static void main(String[] args) {
	        int[] nums = {0, 1, 3, 4};
	        int n = nums.length;
	        int totalSum = n * (n + 1) / 2;
	        int arraySum = 0;
	        
	        for (int num : nums) {
	            arraySum += num;
	   
	        }
	        
	        System.out.println("Missing number is: " + arraySum);
	    }
	}